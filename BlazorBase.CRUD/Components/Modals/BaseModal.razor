@inherits Blazorise.BaseComponent

<CascadingValue Value="@this" IsFixed="true">
    <CascadingValue Value="@State">
        <div @ref="@ElementRef" id="@ElementId" class="@ClassNames" style="@StyleNames" tabindex="-1" role="dialog" @attributes="@Attributes">
            @ChildContent
        </div>
        @if (ShowBackdrop && State.Visible)
        {
            <BaseModalBackdrop CloseActivatorDisabled="true" />
        }
    </CascadingValue>
</CascadingValue>