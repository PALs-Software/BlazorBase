@typeparam TModel

@using BlazorBase.CRUD.Extensions
@using BlazorBase.CRUD.Models
@using System.Reflection

<Modal @ref="Modal">
    <ModalContent Centered="true" Size="ModalSize.Large">
        <ModalHeader>
            <ModalTitle>@Title</ModalTitle>
            <CloseButton Clicked="RejectModal" />
        </ModalHeader>
        <ModalBody>
            @if (Entry != null)
            {
                @if (!String.IsNullOrEmpty(CardSummaryInvalidFeedback))
                {
                    <p class="card-summary-invalid-feedback">
                        @CardSummaryInvalidFeedback
                    </p>
                }

                @foreach (var property in VisibleProperties)
                {
                    <Fields>
                        <Field Horizontal="true">
                            <FieldLabel ColumnSize="ColumnSize.Is4">@ModelLocalizer[property.Name]</FieldLabel>
                            <FieldBody ColumnSize="ColumnSize.Is8">
                                @if (ForeignKeyProperties.ContainsKey(property))
                                {
                                    <BaseInputSelectList @ref="AddToBaseInputSelectLists" Model="Entry" TModel="TModel" Property="property" Data="ForeignKeyProperties[property]" />
                                }
                                else
                                {
                                    <BaseInput @ref="AddToBaseInputs" Model="Entry" TModel="TModel" Property="property" ReadOnly="!AddingMode && property.IsKey()" Service="Service" />
                                }
                            </FieldBody>
                        </Field>
                    </Fields>
                }
            }
        </ModalBody>
        <ModalFooter>
            <Button Color="Color.Secondary" Clicked="RejectModal">Schließen</Button>
            <Button Color="Color.Primary" Clicked="SaveModal">Speichern</Button>
        </ModalFooter>
    </ModalContent>
</Modal>